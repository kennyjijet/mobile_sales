<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_bar"
    android:background="@color/colorBg"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/master"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="35">


    </LinearLayout>
    <LinearLayout
        android:id="@+id/detail"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="65">




        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolBar_splitView_phone"
            >
            <LinearLayout
                android:id="@+id/LnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvCancel"
                    style="@style/toolBar_leftText_splitView_phone"
                    android:text="@string/Cancel"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/toolbar_title"
                style="@style/toolBar_middleText_splitView_phone"
                android:text="Edit Contact"
                />

            <LinearLayout
                android:id="@+id/LnRight"
                style="@style/toolBar_right_splitView_phone"
                >
                <TextView
                    android:id="@+id/tvDone"
                    style="@style/toolBar_rightText_splitView_phone"
                    android:text="@string/Done"
                    />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    style="@style/person_centralized_bg_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/centerImage"
                        style="@style/image_person_splitView_phone"
                        android:src="@drawable/people"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorOrdiary"
                        android:text="First Name:"
                        android:id="@+id/title01"
                        android:layout_weight="0"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorRed"
                        android:text="*"
                        android:id="@+id/title01s"
                        android:layout_weight="0.33"
                        />

                    <EditText
                        android:id="@+id/edFirstName"
                        android:layout_width="wrap_content"
                        style="@style/textviewRightRound_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:hint="First Name"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorOrdiary"
                        android:text="Last Name:"
                        android:id="@+id/title02"
                        android:layout_weight="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorRed"
                        android:text="*"
                        android:id="@+id/title02s"
                        android:layout_weight="0.33"
                        />

                    <EditText
                        android:id="@+id/edLastName"
                        style="@style/textviewRightRound_splitView_phone"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorOrdiary"
                        android:hint="Last Name"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    style="@style/thick_line_splitView_phone"
                    />

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorOrdiary"
                        android:text="Title:"
                        android:id="@+id/title03"
                        android:layout_weight="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorRed"
                        android:text="*"
                        android:id="@+id/title03s"
                        android:layout_weight="0.38"
                        />

                    <EditText
                        android:id="@+id/edTitle"
                        style="@style/textviewRightRound_splitView_phone"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorOrdiary"
                        android:hint="Title"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorOrdiary"
                        android:text="Position:"
                        android:id="@+id/title04"
                        android:layout_weight="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorRed"
                        android:text="*"
                        android:id="@+id/title04s"
                        android:layout_weight="0.36"
                        />

                    <EditText
                        android:id="@+id/edPosition"
                        style="@style/textviewRightRound_splitView_phone"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorOrdiary"
                        android:hint="Position"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnisOwn"
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorOrdiary"
                        android:text="Is Owner?"
                        android:id="@+id/title04af"
                        />

                    <ImageView
                        android:id="@+id/check1"
                        style="@style/Icon_med_1_splitView_phone"
                        android:gravity="right"
                        android:src="@drawable/ic_ultra_check"
                        android:layout_marginRight="@dimen/marginRightBorder_1_phone"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnisDecis"
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorOrdiary"
                        android:text="Is Decision Maker?"
                        android:id="@+id/title04after"
                        />

                    <ImageView
                        android:id="@+id/check2"
                        style="@style/Icon_med_1_splitView_phone"
                        android:src="@drawable/ic_ultra_check"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/marginRightBorder_1_phone"
                        />

                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnRelation"
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Relation to Owner"
                        android:id="@+id/title05b4" />

                    <TextView
                        style="@style/textviewRightNormal_splitView_phone"
                        android:textColor="@color/colorHeavyGrey"
                        android:text="Relation..."
                        android:id="@+id/tv05b4"/>
                    <ImageView
                        style="@style/Image_rightarrow_splitView_phone"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/thick_line_splitView_phone"
                    />

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Birthday:"
                        android:id="@+id/title05" />

                    <EditText
                        android:id="@+id/edBirthday"
                        style="@style/textviewRightRound_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:hint="Birthday"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Mobile:"
                        android:id="@+id/title06" />

                    <EditText
                        android:id="@+id/edMobile"
                        android:inputType="number"
                        style="@style/textviewRightRound_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:hint="Mobile"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Email:"
                        android:id="@+id/title07" />

                    <EditText
                        android:id="@+id/edEmail"
                        style="@style/textviewRightRound_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:hint="Email"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Line ID:"
                        android:id="@+id/title08" />

                    <EditText
                        android:id="@+id/edLineID"
                        style="@style/textviewRightRound_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:hint="Line ID"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/thick_line_splitView_phone"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:paddingLeft="13dp"
                        android:id="@+id/titleFood"
                        android:text="Food"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Like:"
                        android:id="@+id/title09" />

                    <EditText
                        android:id="@+id/edFavFood"
                        style="@style/textviewRightRound_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:hint="Favorite Food"
                        />
                </LinearLayout>


                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Dislike:"
                        android:id="@+id/title10" />

                    <EditText
                        android:id="@+id/edNonFavFood"
                        style="@style/textviewRightRound_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:hint="Non Favorite Food"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/thick_line_splitView_phone"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:paddingLeft="13dp"
                        android:id="@+id/titleDrink"
                        android:text="Drink"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Like:"
                        android:id="@+id/title11" />

                    <EditText
                        android:id="@+id/edFavDrink"
                        style="@style/textviewRightRound_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:hint="Favorite Drink"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Dislike:"
                        android:id="@+id/title12" />

                    <EditText
                        android:id="@+id/edNonFavDrink"
                        style="@style/textviewRightRound_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:hint="Non Favorite Drink"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/thick_line_splitView_phone"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:paddingLeft="13dp"
                        android:id="@+id/titleActivities"
                        android:text="Activities"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Favorite:"
                        android:id="@+id/title13" />

                    <EditText
                        android:id="@+id/edFavAct"
                        style="@style/textviewRightRound_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:hint="Favorite Activities"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Non-Favorite:"
                        android:id="@+id/title14" />

                    <EditText
                        android:id="@+id/edNonFavAct"
                        style="@style/textviewRightRound_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:hint="Non Favorite Activities"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>