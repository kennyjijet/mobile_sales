<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_bar"
    android:background="@color/colorBg"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/detail"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="65">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolBar_splitView_phone"
            >
            <LinearLayout
                android:id="@+id/LnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvgoBack"
                    style="@style/toolBar_leftText_splitView_phone"
                    android:text="@string/Cancel"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/toolBar_middleText_splitView_phone"
                android:text="Collection"
                />

            <LinearLayout
                android:id="@+id/LnRight"
                style="@style/toolBar_right_splitView_phone"
                >
                <TextView
                    android:id="@+id/toolbar_done"
                    style="@style/toolBar_rightText_splitView_phone"
                    android:text="@string/Done"
                    />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            android:background="@color/colorBg"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title01"
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Payment Type:" />

                    <TextView
                        android:id="@+id/tvPayType"
                        style="@style/textviewRightNormal_splitView_phone"
                        android:paddingRight="0dp"
                        android:textSize="@dimen/Content_fontSize_splitView_phone"
                        android:text=""
                        android:textColor="@color/colorOrdiary"
                        />
                    <ImageView
                        style="@style/Image_rightarrow_splitView_phone"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/thick_line_splitView_phone"
                    />
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnSelctInvoice"
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title02"
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Select invoices:"
                        />

                    <TextView
                        android:id="@+id/tvSelctInvoice"
                        style="@style/textviewRightNormal_splitView_phone"
                        android:paddingRight="0dp"
                        android:textSize="@dimen/Content_fontSize_splitView_phone"
                        android:text=""
                        android:textColor="@color/colorOrdiary"
                        />
                    <ImageView
                        style="@style/Image_rightarrow_splitView_phone"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/Title_Session_splitView_phone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title1"
                        style="@style/Title_Text_Session_NoBold_splitView_phone"
                        android:textSize="@dimen/Content_fontSize_splitView_phone"
                        android:textColor="@color/colorHeavyGreyText"
                        android:textStyle="bold"
                        android:text="Collection" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title03"
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Total:" />

                    <TextView
                        android:id="@+id/tvTotal"
                        style="@style/textviewRightNormal_splitView_phone"
                        android:text="0"
                        android:textColor="@color/colorHeavyGreyText"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title04"
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Amount Received:" />

                    <EditText
                        android:id="@+id/edAmtRecv"
                        style="@style/textviewRightRound_splitView_phone"
                        android:hint=""
                        android:textColor="@color/colorOrdiary"
                        />
                </LinearLayout>

                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    />
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title05"
                        style="@style/textviewLeft_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Remain:" />

                    <TextView
                        android:id="@+id/tvRemain"
                        style="@style/textviewRightNormal_splitView_phone"
                        android:text="0"
                        android:textColor="@color/colorHeavyGreyText"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/thick_line_splitView_phone"
                    />
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnCashTrnsChq"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        style="@style/Table_Dynamic_splitView_phone"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/title06"
                            android:layout_weight="0.3"
                            style="@style/textviewLeft_splitView_phone"
                            android:textColor="@color/colorOrdiary"
                            android:text="Reference number:" />

                        <EditText
                            android:id="@+id/edTitle06Value"
                            style="@style/textviewRightRound_splitView_phone"
                            android:hint=""
                            android:textColor="@color/colorOrdiary"
                            />
                    </LinearLayout>
                    <LinearLayout
                        style="@style/small_line_splitView_phone"
                        >
                    </LinearLayout>
                    <LinearLayout
                        style="@style/Table_Dynamic_splitView_phone"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/title07"
                            android:layout_weight="0.65"
                            style="@style/textviewLeft_splitView_phone"
                            android:textColor="@color/colorOrdiary"
                            android:text="Bank:" />

                        <TextView
                            android:id="@+id/edTitle07Value"
                            style="@style/textviewRightNormal_splitView_phone"
                            android:textColor="@color/colorOrdiary"
                            />
                        <ImageView
                            style="@style/Image_rightarrow_splitView_phone"
                            android:layout_marginRight="5dp"
                            android:gravity="right"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                    <LinearLayout
                        style="@style/small_line_splitView_phone"
                        >
                    </LinearLayout>
                    <LinearLayout
                        style="@style/Table_Dynamic_splitView_phone"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/title08"
                            android:layout_weight="0.3"
                            style="@style/textviewLeft_splitView_phone"
                            android:textColor="@color/colorOrdiary"
                            android:text="Branch:" />

                        <EditText
                            android:id="@+id/edTitle08Value"
                            style="@style/textviewRightRound_splitView_phone"
                            android:hint=""
                            android:textColor="@color/colorOrdiary"
                            />
                    </LinearLayout>
                    <LinearLayout
                        style="@style/small_line_splitView_phone"
                        />
                    <LinearLayout
                        style="@style/Table_Dynamic_splitView_phone"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/title09RemitDate"
                            style="@style/textviewLeft_splitView_phone"
                            android:textColor="@color/colorOrdiary"
                            android:layout_weight="0.5"
                            android:text="Remittance Date:" />

                        <TextView
                            android:id="@+id/tvTitle09RemitDate"
                            style="@style/textviewRightNormal_splitView_phone"
                            android:text="0"
                            android:textColor="@color/colorHeavyGreyText"
                            />
                        <DatePicker
                            android:id="@+id/dpResult"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:background="@color/colorMedGrey"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title09"
                        style="@style/textviewLeft_splitView_phone"
                        android:layout_gravity="center"
                        android:textColor="@color/colorOrdiary"
                        android:textStyle="bold"
                        android:text="Photo:"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:id="@+id/imgPhoto"
                            style="@style/image_person_customer_detail_splitView_phone"
                            android:gravity="right"
                            android:src="@drawable/photon"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    style="@style/Title_Session_splitView_phone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title2"
                        style="@style/Title_Text_Session_NoBold_splitView_phone"
                        android:paddingTop="@dimen/marginLeftBorder_1_splitView_phone"
                        android:textSize="@dimen/Content_fontSize_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:textStyle="bold"
                        android:text="Remark" />
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/edRemark"
                        style="@style/note_editText_whiteBg_splitView_phone"
                        android:hint="" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>