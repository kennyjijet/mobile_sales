<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_bar"
    android:background="@color/colorBg"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/detail"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="65">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolBar_splitView_phone"
            >
            <TextView
                android:id="@+id/toolbar_title"
                style="@style/toolBar_middleText_splitView_phone"
                android:text="Customer Detail"
                />
            <LinearLayout
                android:id="@+id/LnRight"
                style="@style/toolBar_right_splitView_phone"
                >
                <TextView
                    android:id="@+id/tvEdit"
                    style="@style/toolBar_rightText_splitView_phone"
                    android:text="@string/Edit"
                    />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBg"
            android:layout_below="@+id/toolbar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_2_splitView_phone"
                    android:background="@color/colorMedGrey"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/imgURL"
                        style="@style/image_person_customer_detail_splitView_phone"
                        android:src="@drawable/businessbuilding"
                        android:layout_gravity="center"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/marginLeftBorder_1_splitView_phone"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/tvName"
                            style="@style/textviewLeft_bold_splitView_phone"
                            android:textColor="@color/colorOrdiary"
                            android:textSize="@dimen/Content_fontSize_splitView_phone"
                            android:text="United Oil Gas Corp." />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/tvNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorOrdiary"
                                android:textSize="@dimen/Content_2_fontSize_splitView_phone"
                                android:text="1019128309"
                                />
                            <TextView
                                android:id="@+id/tvType"
                                style="@style/textviewLeft_splitView_phone"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/colorHeavyGrey"
                                android:textSize="@dimen/Content_2_fontSize_splitView_phone"
                                android:text="A"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            >
                        </LinearLayout>
                        <LinearLayout
                            style="@style/Table_Dynamic_NoPadding_splitView_phone"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/tvCreditLimit"
                                style="@style/textviewLeft_splitView_phone"
                                android:textSize="@dimen/Content_2_fontSize_splitView_phone"
                                android:text="Credit Limit:"
                                />
                            <TextView
                                android:id="@+id/tvCreditLimitValue"
                                style="@style/textviewLeft_splitView_phone"
                                android:textColor="@color/colorBrown"
                                android:textSize="@dimen/Content_2_fontSize_splitView_phone"
                                android:text="1,000.00"
                                />
                        </LinearLayout>
                        <LinearLayout
                            style="@style/Table_Dynamic_NoPadding_splitView_phone"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/tvBalance"
                                style="@style/textviewLeft_splitView_phone"
                                android:textSize="@dimen/Content_2_fontSize_splitView_phone"
                                android:text="Balance:"
                                />
                            <TextView
                                android:id="@+id/tvBalanceValue"
                                style="@style/textviewLeft_splitView_phone"
                                android:textColor="@color/colorBrown"
                                android:textSize="@dimen/Content_2_fontSize_splitView_phone"
                                android:text="325,000"
                                />
                        </LinearLayout>
                        <LinearLayout
                            style="@style/Table_Dynamic_NoPadding_splitView_phone"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="0.5"
                                >
                                <TextView
                                    android:id="@+id/tvAvailable"
                                    style="@style/textviewLeft_splitView_phone"
                                    android:textSize="@dimen/Content_2_fontSize_splitView_phone"
                                    android:text="Available:"
                                    />
                                <TextView
                                    android:id="@+id/tvAvailableValue"
                                    style="@style/textviewLeft_splitView_phone"
                                    android:textColor="@color/colorBrown"
                                    android:textSize="@dimen/Content_2_fontSize_splitView_phone"
                                    android:text="1,000,000"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:gravity="right"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="5dp"
                                >

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal" >
                    <ImageView
                        style="@style/Icon_med_3_splitView_phone"
                        android:src="@drawable/icon_contact"/>
                    <LinearLayout
                        style="@style/Table_Dynamic_splitView_phone"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/title07Contacts"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.9"
                            android:text="Contacts" />
                        <ImageView
                            style="@style/Image_rightarrow_splitView_phone"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    style="@style/thick_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/tvtitle01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/Content_1_fontSize_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Channel:"
                        />
                    <TextView
                        android:id="@+id/tvChannel"
                        style="@style/textviewLeft_AfterImage_splitView_phone"
                        android:textSize="@dimen/Content_1_fontSize_splitView_phone"
                        android:text="OTC"

                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        style="@style/Icon_med_3_splitView_phone"
                        android:src="@drawable/phoneicon"
                        />
                    <LinearLayout
                        style="@style/Table_Dynamic_Customer_detail_splitView_phone"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/title01"
                            style="@style/textviewLeft_splitView_phone"
                            android:textColor="@color/colorHeavyGreyText"
                            android:text="PHONE1" />
                        <TextView
                            android:id="@+id/tvPhone1"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorOrdiary"
                            android:text="(711) 993-5187" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal" >
                    <ImageView
                        style="@style/Icon_med_3_splitView_phone"
                        android:src="@drawable/phoneicon"/>
                    <LinearLayout
                        style="@style/Table_Dynamic_Customer_detail_splitView_phone"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/title02"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorHeavyGreyText"
                            android:text="PHONE2" />
                        <TextView
                            android:id="@+id/tvPhone2"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorOrdiary"
                            android:text="(711) 993-5187" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal" >
                    <ImageView
                        style="@style/Icon_med_3_splitView_phone"
                        android:src="@drawable/mobile"/>
                    <LinearLayout
                        style="@style/Table_Dynamic_Customer_detail_splitView_phone"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/title03"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorHeavyGreyText"
                            android:text="MOBILE" />
                        <TextView
                            android:id="@+id/tvMobile"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorOrdiary"
                            android:text="(711) 993-5187" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal" >
                    <ImageView
                        style="@style/Icon_med_3_splitView_phone"
                        android:src="@drawable/fax"/>
                    <LinearLayout
                        style="@style/Table_Dynamic_Customer_detail_splitView_phone"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/title04"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorHeavyGreyText"
                            android:text="FAX" />

                        <TextView
                            android:id="@+id/tvFax"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorOrdiary"
                            android:text="(711) 993-5187" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/thick_line_splitView_phone"
                    />

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal" >
                    <ImageView
                        style="@style/Icon_med_3_splitView_phone"
                        android:src="@drawable/email"/>
                    <LinearLayout
                        style="@style/Table_Dynamic_Customer_detail_splitView_phone"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/title05"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorHeavyGreyText"
                            android:text="EMAIL" />
                        <TextView
                            android:id="@+id/tvEmail"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorOrdiary"
                            android:text="xxx@xxx.com" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal" >
                    <ImageView
                        style="@style/Icon_med_3_splitView_phone"
                        android:src="@drawable/web"/>
                    <LinearLayout
                        style="@style/Table_Dynamic_Customer_detail_splitView_phone"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/title06"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorHeavyGreyText"
                            android:text="WEBSITE" />
                        <TextView
                            android:id="@+id/tvWebsite"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorOrdiary"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/thick_line_splitView_phone"
                    />

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal" >
                    <ImageView
                        style="@style/Icon_med_3_splitView_phone"
                        android:src="@drawable/bill"/>
                    <LinearLayout
                        style="@style/Table_Dynamic_splitView_phone"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/title08BillTo"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorOrdiary"
                            android:layout_weight="0.9"
                            android:text="Bill To" />

                        <ImageView
                            style="@style/Image_rightarrow_splitView_phone"

                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal" >
                    <ImageView
                        style="@style/Icon_med_3_splitView_phone"
                        android:src="@drawable/truck"
                        />
                    <LinearLayout
                        style="@style/Table_Dynamic_splitView_phone"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/title09ShipTo"
                            style="@style/textviewLeft_splitView_phone"
                            android:layout_marginLeft="0dp"
                            android:textColor="@color/colorOrdiary"
                            android:layout_weight="0.9"
                            android:text="Ship To" />

                        <ImageView
                            style="@style/Image_rightarrow_splitView_phone"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/Title_Session_splitView_phone"
                    >
                    <TextView
                        android:id="@+id/tvtitle02"
                        style="@style/Title_Text_Session_splitView_phone"
                        android:text="Sales History"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lnInvoice"
                    style="@style/Table_Dynamic_splitView_phone"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal" >

                    <ListView
                        android:id="@+id/list_salehistory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </ListView>
                </LinearLayout>

                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>