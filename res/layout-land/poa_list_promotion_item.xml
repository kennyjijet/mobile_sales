<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="77dp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <TextView
                    android:id="@+id/top_name1"
                    android:textColor="@color/colorOrdiary"
                    style="@style/textviewLeft_phone"
                    android:text="xxxx"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_top_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/top_name2"
                    android:textColor="@color/colorOrdiary"
                    style="@style/textviewLeft_phone"
                    android:text="xxxx"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/pro_id"
                    style="@style/textviewLeft_phone"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/colorBrown"
                    android:text="PRO 0001"/>
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pro_date"
                style="@style/textviewRightNormal_phone"
                android:textColor="@color/colorBlue"
                android:text="2016-06-01"/>

            <ImageView
                style="@style/Image_rightarrow_phone" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
