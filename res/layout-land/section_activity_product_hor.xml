<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:id="@+id/session_products"
    >
    <LinearLayout
        android:id="@+id/lnbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@color/colorHeavyGrey"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/lnColorSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="65"

                    >
                    <TextView
                        android:id="@+id/session_purchased_product"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorBg"
                        android:text="Purchased Products"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        />
                </RelativeLayout>
                <View
                    style="@style/verticle_line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOrdiary"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:id="@+id/session_qty_price_unit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBg"

                                android:textSize="17sp"
                                android:layout_weight="20"

                                android:layout_gravity="bottom"
                                android:gravity="center|bottom"
                                />
                            <!--android:text="Available Qty Price / Unit"-->


                            <TextView
                                android:id="@+id/session_onshelf"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|center_horizontal"
                                android:textColor="@color/colorBg"
                                android:text="OnShelf"
                                android:textSize="21sp"
                                android:layout_weight="20"
                                android:textStyle="bold"
                                />
                            <!--android:gravity="center|bottom"-->
                            <!--android:layout_gravity="bottom"-->


                            <TextView
                                android:id="@+id/session_instock"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"

                                android:gravity="center_vertical|center_horizontal"

                                android:textColor="@color/colorBg"
                                android:text="InStock"
                                android:textSize="21sp"
                                android:layout_weight="20"

                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/session_quantity"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"

                                android:gravity="center_vertical|center_horizontal"

                                android:textColor="@color/colorBg"
                                android:text="Quantity"
                                android:textSize="21sp"
                                android:layout_weight="20"

                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/session_foc"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"

                                android:gravity="center_vertical|center_horizontal"

                                android:textColor="@color/colorBg"
                                android:text="FOC"
                                android:textSize="21sp"
                                android:layout_weight="20"
                                android:textStyle="bold"
                                />
                            <TextView

                                android:id="@+id/session_discount1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"

                                android:gravity="center_vertical|center_horizontal"

                                android:textColor="@color/colorBg"
                                android:text="Discount 1"
                                android:textSize="21sp"
                                android:layout_weight="20"

                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/session_amount"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"

                                android:gravity="center_vertical|center_horizontal"

                                android:textColor="@color/colorBg"
                                android:text="Amount"
                                android:textSize="21sp"
                                android:layout_weight="20"

                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--<LinearLayout-->
                <!--style="@style/small_line_phone"-->
                <!--&gt;-->
            <!--</LinearLayout>-->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

