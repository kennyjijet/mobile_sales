<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="77dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/promName"
                style="@style/textviewLeft_phone"
                android:text="Name1"/>
            <TextView
                android:id="@+id/promName2"
                style="@style/textviewLeft_phone"
                android:text="Name2"/>
            <TextView
                android:id="@+id/promCode"
                style="@style/textviewLeft_phone"
                android:textColor="@color/colorBrown"
                android:text="Code"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/promDate"
                style="@style/textviewRightNormal_phone"
                android:text="2016-06-30"
                />
            <ImageView
                style="@style/Image_rightarrow_phone"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
