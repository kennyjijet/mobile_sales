    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!-- for Acer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:orientation="horizontal">

            <!-- for Geny: 1280x800 -->
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="530dp"-->
            <!--android:orientation="horizontal">-->

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="530dp"-->
                <!--android:orientation="horizontal">-->

                <LinearLayout
                    android:background="#ff00ff"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="65">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/colorToolbarGrey"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark" >
                        <RelativeLayout
                            android:id="@+id/menuBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false">

                            <TextView
                                android:layout_margin="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textSize="32sp"
                                android:textColor="@color/colorOrdiary"
                                android:id="@+id/toolbar_title"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="#7c7b7e"
                                android:id="@+id/toolbar_title_save"
                                />

                        </RelativeLayout>



                    </android.support.v7.widget.Toolbar>
                    <FrameLayout
                        android:background="#000fff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/containerView1"
                        android:layout_weight="65">
                        <android.support.v4.view.ViewPager
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="35"/>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/small_line_vertical_tablet"
                    >
                </LinearLayout>

                <!--android:layout_height="480dp"-->
                <!--android:layout_height="250dp"-->
                <!--android:layout_height="match_parent"-->
                <FrameLayout
                    android:background="#fff000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/containerView2"
                    android:layout_weight="35">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="test 35"/>

                </FrameLayout>
            </LinearLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                app:tabGravity="fill"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                app:tabIndicatorColor="@android:color/holo_blue_light"
                app:tabIndicatorHeight="4dp"/>
            <!--android:background="@color/colorMedGrey"-->

        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>



    <android.support.design.widget.NavigationView
        android:id="@+id/shitstuff"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        />
</android.support.v4.widget.DrawerLayout>