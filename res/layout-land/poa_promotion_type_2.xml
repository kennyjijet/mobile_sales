<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolBar_phone"
        >
        <LinearLayout
            android:id="@+id/LnLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/goBack"
                style="@style/Image_backarrow_phone"
                />
            <TextView
                android:id="@+id/tvgoBack"
                style="@style/toolBar_leftText_phone"
                android:text="@string/Back"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/toolbar_title"
            style="@style/toolBar_middleText_phone"
            android:text="Promotion Detail"
            />
        <LinearLayout
            android:id="@+id/LnRight"
            style="@style/toolBar_right_phone"
            >
            <TextView
                android:id="@+id/toolbar_done_2"
                style="@style/toolBar_rightText_phone"
                android:text="@string/Done"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:orientation="vertical">
            <TextView
                android:id="@+id/prom_name"
                style="@style/textviewLeft_phone"
                android:paddingLeft="5dp"
                android:text="Name"
                android:layout_weight="40"/>
            <TextView
                android:id="@+id/prom_des"
                style="@style/textviewLeft_phone"
                android:paddingLeft="15dp"
                android:textColor="@color/colorHeavyGrey"
                android:text="detail"
                android:layout_weight="40"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="60"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMedGrey"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ttAmount"
                    style="@style/textviewLeft_phone"
                    android:paddingLeft="5dp"
                    android:text="Amount : "
                    android:layout_weight="55"/>
                <TextView
                    android:id="@+id/tvAmount"
                    style="@style/textviewLeft_phone"
                    android:text="0"
                    android:textColor="@color/colorBrown"
                    android:layout_weight="45"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ttTotalIn"
                    style="@style/textviewLeft_phone"
                    android:text="Order"
                    android:layout_weight="60"/>

                <EditText
                    android:id="@+id/edTotal"
                    style="@style/textviewRightRound_phone"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_weight="40"
                    android:paddingRight="0dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:textColor="@color/colorBrown"
                    android:text="0"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/small_line_tablet">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#8C848484">
                <TextView
                    android:id="@+id/ttCriteria"
                    style="@style/textviewLeft_phone"
                    android:paddingLeft="5dp"
                    android:text="Promotion Criteria"
                    android:textColor="#fffefd"
                    android:layout_weight="40"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="60">
                    <TextView
                        android:id="@+id/ttPriceCri"
                        style="@style/textviewLeft_phone"
                        android:textColor="#fffefd"
                        android:gravity="center"
                        android:paddingRight="15dp"
                        android:text="Price"/>
                    <TextView
                        android:id="@+id/ttQtyCri"
                        style="@style/textviewLeft_phone"
                        android:textColor="#fffefd"
                        android:gravity="center"
                        android:text="Total"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="40">
                    <TextView
                        android:id="@+id/tvProdNameCri"
                        style="@style/textviewLeft_phone"
                        android:height="45px"
                        android:paddingLeft="15dp"
                        android:text="prodName"/>
                    <TextView
                        android:id="@+id/tvProdCodeCri"
                        style="@style/textviewLeft_phone"
                        android:height="45px"
                        android:paddingLeft="15dp"
                        android:textColor="@color/colorHeavyGrey"
                        android:text="prodCode"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="60">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvPriceCri"
                            android:gravity="center"
                            style="@style/textviewRightNormal_phone"
                            android:text="price"
                            android:textColor="@color/colorBrown" />
                        <TextView
                            android:id="@+id/tvUomCri"
                            android:gravity="center"
                            style="@style/textviewRightNormal_phone"
                            android:text="uom"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTotalCri"
                        style="@style/textviewLeft_phone"
                        android:textColor="@color/colorBrown"
                        android:gravity="center_horizontal"
                        android:layout_weight="50"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8C848484">
                <TextView
                    android:id="@+id/ttBenefit"
                    style="@style/textviewLeft_phone"
                    android:paddingLeft="5dp"
                    android:text="Promotion Benefit"
                    android:textColor="#fffefd"
                    android:layout_weight="40"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="60">
                    <TextView
                        android:id="@+id/ttPriceBen"
                        style="@style/textviewLeft_phone"
                        android:textColor="#fffefd"
                        android:gravity="center"
                        android:paddingRight="15dp"
                        android:text="Price"/>
                    <TextView
                        android:id="@+id/ttQtyBen"
                        style="@style/textviewLeft_phone"
                        android:textColor="#fffefd"
                        android:gravity="center"
                        android:text="Total"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="40">
                    <TextView
                        android:id="@+id/tvProdNameBen"
                        style="@style/textviewLeft_phone"
                        android:paddingLeft="15dp"
                        android:height="45px"
                        android:text="prodName"/>
                    <TextView
                        android:id="@+id/tvProdCodeBen"
                        style="@style/textviewLeft_phone"
                        android:paddingLeft="15dp"
                        android:height="45px"
                        android:textColor="@color/colorHeavyGrey"
                        android:text="prodCode"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="60">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="50">
                        <TextView
                            android:id="@+id/tvPriceBen"
                            android:gravity="center"
                            style="@style/textviewRightNormal_phone"
                            android:text="price"
                            android:textColor="@color/colorBrown"/>
                        <TextView
                            android:id="@+id/tvUomBen"
                            android:gravity="center"
                            style="@style/textviewRightNormal_phone"
                            android:text="uom"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvTotalBen"
                        style="@style/textviewLeft_phone"
                        android:textColor="@color/colorBrown"
                        android:gravity="center_horizontal"
                        android:layout_weight="50"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorHeavyGrey"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ttTier"
            style="@style/textviewLeft_phone"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBg"
            android:layout_weight="33"
            android:text="Tier"/>
        <TextView
            android:id="@+id/ttCri"
            style="@style/textviewLeft_phone"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBg"
            android:layout_weight="33"
            android:text="Criteria"/>
        <TextView
            android:id="@+id/ttBen"
            style="@style/textviewLeft_phone"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBg"
            android:layout_weight="33"
            android:text="Benefit"/>

    </LinearLayout>
    <ListView
        android:id="@+id/list_item_promotion_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>
