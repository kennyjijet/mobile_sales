<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorBg"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolBar_phone"
            >
            <LinearLayout
                android:id="@+id/LnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/goBack"
                    style="@style/Image_backarrow_phone"
                    />
                <TextView
                    android:id="@+id/tvgoBack"
                    style="@style/toolBar_leftText_phone"
                    android:text="@string/Back"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/toolbar_title"
                style="@style/toolBar_middleText_phone"
                android:text="Promotion Detail"
                />
            <LinearLayout
                android:id="@+id/LnRight"
                style="@style/toolBar_right_phone"
                >
                <TextView
                    android:id="@+id/toolbar_done_1"
                    style="@style/toolBar_rightText_phone"
                    android:text="@string/Done"
                    />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/prom_name"
                    style="@style/textviewLeft_phone"
                    android:paddingLeft="5dp"
                    android:text="Name"
                    android:layout_weight="40"/>
                <TextView
                    android:id="@+id/prom_des"
                    style="@style/textviewLeft_phone"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorHeavyGrey"
                    android:text="detail"
                    android:layout_weight="40"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="60"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorMedGrey"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/ttAmount"
                        style="@style/textviewLeft_phone"
                        android:paddingLeft="5dp"
                        android:text="Amount : "
                        android:layout_weight="55"/>
                    <TextView
                        android:id="@+id/tvAmount"
                        style="@style/textviewLeft_phone"
                        android:text="0"
                        android:textColor="@color/colorBrown"
                        android:layout_weight="45"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="60"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/tvTier"
                            style="@style/textviewLeft_phone"
                            android:text="Order"
                            android:layout_weight="60"/>

                        <EditText
                            android:id="@+id/tvOrderNum"
                            style="@style/textviewRightRound_phone"
                            android:gravity="center"
                            android:inputType="number"
                            android:layout_weight="40"
                            android:paddingRight="0dp"
                            android:paddingLeft="0dp"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:textColor="@color/colorBrown"
                            android:text="0"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            style="@style/small_line_tablet">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/list_item_promotion_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>

            </LinearLayout>
        </LinearLayout>
    </TableLayout>

</LinearLayout>
