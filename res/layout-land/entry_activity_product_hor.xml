<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:id="@+id/entry_products"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@color/colorBg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:orientation="horizontal"

                >

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="65"
                    >-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="65"
                    android:paddingTop="0dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="0dp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="85"
                        >
                        <TextView
                            android:id="@+id/title_name"
                            style="@style/textviewLeft_phone"
                            android:layout_margin="0dp"
                            android:textColor="@color/colorOrdiary"
                            android:text="Ovaltine Yen"
                            android:textSize="19sp"
                            />
                        <TextView
                            android:id="@+id/title_number"
                            style="@style/textviewLeft_phone"
                            android:layout_margin="0dp"
                            android:textColor="@color/colorHeavyGrey"
                            android:text="19542321-"
                            android:textSize="18sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15">
                        <ImageView
                            android:id="@+id/imgPromDeal"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_prom_deal"/>
                    </LinearLayout>



                </LinearLayout>
                <View
                    style="@style/verticle_line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorBg"
                    android:layout_weight="35"
                    >
                    <LinearLayout
                        android:id="@+id/entry_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorOrdiary"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:orientation="vertical"
                                >
                                <TextView
                                    android:id="@+id/availQty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:textColor="@color/colorBrown"
                                    android:text="2342"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    />
                                <TextView
                                    android:id="@+id/price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:textColor="@color/colorOrdiary"
                                    android:text="50 / box"
                                    android:textSize="15sp"
                                    android:layout_gravity="center"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <!--android:focussable= "false"-->
                                <EditText
                                    android:id="@+id/edit_text_onshelf"

                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorOrdiary"
                                    android:textSize="20sp"
                                    android:background="@drawable/round_edit"
                                    android:textStyle="bold"
                                    android:gravity="right|center"

                                    />
                                <!--android:inputType="number"-->

                                <EditText
                                    android:id="@+id/edit_text_instock"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorOrdiary"
                                    android:textSize="20sp"
                                    android:background="@drawable/round_edit"
                                    android:textStyle="bold"
                                    android:gravity="right|center"
                                    android:inputType="number"
                                    />

                                <EditText
                                    android:id="@+id/edit_text_quantity"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="25dp"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorOrdiary"
                                    android:textSize="20sp"
                                    android:background="@drawable/round_edit"
                                    android:textStyle="bold"
                                    android:gravity="right|center"
                                    android:inputType="number"
                                    />

                                <EditText
                                    android:id="@+id/edit_text_foc"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="30dp"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorOrdiary"
                                    android:textSize="20sp"
                                    android:background="@drawable/round_edit"
                                    android:textStyle="bold"
                                    android:gravity="right|center"
                                    android:inputType="number"
                                    />

                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="20"
                                android:orientation="horizontal"
                                >

                                <EditText
                                    android:id="@+id/edit_text_discount1"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="20dp"
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorOrdiary"
                                    android:textSize="20sp"
                                    android:background="@drawable/round_edit"
                                    android:textStyle="bold"
                                    android:gravity="right|center"
                                    android:inputType="numberDecimal"
                                    />

                                <!--<ImageView-->
                                    <!--android:id="@+id/img"-->
                                    <!--style="@style/Icon_med_1_phone"-->
                                    <!--android:background="@drawable/moneyicon"-->
                                    <!--/>-->
                                <ImageView
                                    android:id="@+id/imgDis"
                                    style="@style/Icon_med_3_phone"
                                    android:background="@drawable/ic_prod_percent"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="right"
                                android:layout_weight="15"
                                >

                                <TextView
                                    android:id="@+id/tv_amount_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:textColor="@color/colorOrdiary"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    />

                                <!--<ImageView-->
                                    <!--style="@style/Icon_med_1_phone"-->
                                    <!--android:background="@drawable/arrowgrey"-->
                                    <!--android:gravity="center"-->
                                    <!--/>-->
                                <ImageView
                                    style="@style/Icon_med_2_phone"
                                    android:background="@drawable/ic_prod_pencil"
                                    android:gravity="center"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                style="@style/small_line_phone"
                >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>


