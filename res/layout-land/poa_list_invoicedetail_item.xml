<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/Table_Dynamic_phone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/list_name"
                    style="@style/textviewLeft_phone"
                    android:textColor="@color/colorOrdiary"
                    android:text="Name"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/list_code"
                        style="@style/textviewLeft_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="xxxxxx,"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/list_quantity"
                        style="@style/textviewLeft_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="25.00 "
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/list_uom"
                        style="@style/textviewLeft_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Box,"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/list_discount"
                        style="@style/textviewLeft_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="0.0%"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/list_price"
                style="@style/textviewLeft_phone"
                android:gravity="right|center"
                android:textColor="@color/colorOrdiary"
                android:text="584.25"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/small_line_phone"
        >
    </LinearLayout>

</LinearLayout>
