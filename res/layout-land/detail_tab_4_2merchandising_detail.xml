<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_bar"
    android:background="@color/colorBg"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/detail"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="65">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolBar_splitView_phone"
            >
            <LinearLayout
                android:id="@+id/LnLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tvgoCancel"
                    style="@style/toolBar_leftText_splitView_phone"
                    android:text="@string/Cancel"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/toolbar_title"
                style="@style/toolBar_middleText_splitView_phone"
                android:text="Merchandising Detail"
                android:textSize="@dimen/Content_fontSize_splitView_phone"
                />
            <LinearLayout
                android:id="@+id/LnRight"
                style="@style/toolBar_right_splitView_phone"
                >
                <TextView
                    android:id="@+id/toolbar_done"
                    style="@style/toolBar_rightText_splitView_phone"
                    android:text="@string/Done"
                    />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:text="Brand:"
                        android:textStyle="bold"
                        android:id="@+id/title01" />

                    <TextView
                        android:id="@+id/tvShowBrand"
                        style="@style/textviewRightNormal_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:hint="None"
                        android:layout_marginRight="5dp"
                        />

                    <ImageView
                        style="@style/Image_rightarrow_splitView_phone"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:text="Display Location:"
                        android:id="@+id/title02" />

                    <TextView
                        android:id="@+id/tvShowLocation"
                        style="@style/textviewRightNormal_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:hint="None"
                        android:layout_marginRight="5dp"
                        />

                    <ImageView
                        style="@style/Image_rightarrow_splitView_phone"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:text="Display Type:"
                        android:id="@+id/title03" />

                    <TextView
                        android:id="@+id/tvShowDisplayType"

                        style="@style/textviewRightNormal_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:hint="None"
                        android:layout_marginRight="5dp"
                        />

                    <ImageView
                        style="@style/Image_rightarrow_splitView_phone"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_splitView_phone"
                        android:layout_weight="2"
                        android:textColor="@color/colorOrdiary"
                        android:text="POP:"
                        android:id="@+id/title04" />

                    <TextView
                        android:id="@+id/tvShowPop"

                        style="@style/textviewRightNormal_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:hint="None"
                        android:layout_marginRight="5dp"
                        />

                    <ImageView
                        style="@style/Image_rightarrow_splitView_phone"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOrdiary"
                        android:textSize="@dimen/Content_1_fontSize_splitView_phone"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:text="Before"
                        android:id="@+id/tvBefore"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorOrdiary"
                        android:textSize="@dimen/Content_1_fontSize_splitView_phone"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:text="After"
                        android:id="@+id/tvAfter"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        style="@style/photo_bg_splitView_phone"
                        android:orientation="horizontal"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        >
                        <ImageView
                            android:id="@+id/imgPhoto1"
                            style="@style/image_person_customer_detail_splitView_phone"
                            android:src="@drawable/photon"
                            android:layout_marginLeft="@dimen/marginLeftBorder_1_splitView_phone"
                            />
                    </LinearLayout>
                    <LinearLayout
                        style="@style/photo_bg_splitView_phone"
                        android:orientation="horizontal"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        >
                        <ImageView
                            android:id="@+id/imgPhoto2"
                            style="@style/image_person_customer_detail_splitView_phone"
                            android:src="@drawable/photon"
                            android:gravity="center"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    style="@style/Table_Dynamic_splitView_phone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        style="@style/textviewLeft_bold_splitView_phone"
                        android:textColor="@color/colorOrdiary"
                        android:text="Remarks:"
                        android:id="@+id/title05"
                        />
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>
                <LinearLayout
                    style="@style/note_parent_splitView_phone"
                    >
                    <EditText
                        android:id="@+id/edRemark01"
                        style="@style/note_editText_whiteBg_splitView_phone"
                        android:hint="Detail.." />
                </LinearLayout>
                <LinearLayout
                    style="@style/small_line_splitView_phone"
                    >
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>