<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="55"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/promCri_name"
                    style="@style/textviewLeft_phone"
                    android:text="Name"/>
                <TextView
                    android:id="@+id/promCri_name2"
                    style="@style/textviewLeft_phone"
                    android:text="Name2"/>
                <TextView
                    android:id="@+id/promCri_code"
                    style="@style/textviewLeft_phone"
                    android:textColor="@color/colorHeavyGrey"
                    android:text="4010102003"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="45">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="40">
                    <TextView
                        android:id="@+id/promCri_price"
                        style="@style/textviewRightNormal_phone"
                        android:layout_height="45px"
                        android:gravity="center|end"
                        android:text="50.09"
                        android:textColor="@color/colorBrown"/>
                    <TextView
                        android:id="@+id/promCri_uom"
                        style="@style/textviewRightNormal_phone"
                        android:gravity="center_vertical|end"
                        android:layout_height="45px"
                        android:text="Box"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/promCri_quantity"
                    style="@style/textviewRightNormal_phone"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBrown"
                    android:layout_weight="50"
                    android:text="10"/>

                <TextView
                    android:id="@+id/prom_Total"
                    style="@style/textviewRightNormal_phone"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBrown"
                    android:layout_weight="40"
                    android:text="0"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
